<h1>Miyagi</h1>
<div id="code">             

	<div id="dojo_instructions">
		<% remote_form_for @description, :url => { :controller => "home", :action => "start_dojo" } do |f| %>
			Type the name of your first class: <%= f.text_field :name, :size => 20 %>
		<%= f.submit "Start!" %>
		<% end %>
	</div>

	<% remote_form_for @description, :url => { :controller => "descriptions", :action => "run_tests" } do |f| %>   
	<div id="run">
				<%= f.submit "Run!" %> 	
	</div>
	<br/><br/>    	

	<div id="coding_timer">		
	</div>     

	<ul class="tabselector" id="tabcontrol1">
		<li class="tab-selected" id="first">Class</li>
		<li class="tab-unselected" id="first"><a href="#">New Class</a></li>
	</ul> 

	<ul class="panes" id="classes">
		<li id="first_class" class="pane-selected">
			<small id="test_title">Test</small>	
			<br/>
			<%= f.text_area :description_code, :cols => 80, :rows => 15 %>
			<br/><br/> 
			<small id="implementation_title">Implementation</small>
			<br/>
			<%= f.text_area :implementation_code, :cols => 80, :rows => 15 %>
		</li>   			
	</ul>
	<% end %>    
</div>